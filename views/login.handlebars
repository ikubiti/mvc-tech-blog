<div class="row entry-point mt-5">
  <div class="entry-form col-md-6">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <form class="login-form">
      <div class="form-floating my-1">
        <input class="form-control" type="text" id="username-login" />
        <label for="username-login">Username:</label>
      </div>
      <div class="form-floating">
        <input class="form-control" type="password" id="password-login" />
        <label for="password-login">password:</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    </form>
  </div>
  <div class="entry-form col-md-6">
    <h1 class="h3 mb-3 fw-normal">Create an Account</h1>

    <form class="signup-form">
      <div class="form-floating my-1">
        <input class="form-control" type="text" name="fullName" id="name-signup" required />
        <label for="name-signup">name:</label>
      </div>
      <div class="form-floating">
        <input class="form-control" type="text" name="username" id="username-signup" required />
        <label for="username-signup">username:</label>
      </div>
      <div class="my-1  text-center">
        <label for="profile-image" class="form-label">Profile Picture: </label>
        <input class="form-control form-control-lg" id="profile-image"  name="image" type="file" required>
      </div>
      <div class="form-floating my-1">
        <input class="form-control" type="text" name="email" id="email-signup" required/>
        <label for="email-signup">email:</label>
      </div>
      <div class="form-floating">
        <input class="form-control" type="password" name="password" id="password-signup" required/>
        <label for="password-signup">password:</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
