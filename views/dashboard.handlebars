
<div class="fluid-container">
      <div class="row">
        <div class="col-md-5 col-lg-4 list-container">
          <div class="card blog-list">
            <div class=" left-pad">
              <h3 class="blog-title">Your Blogs</h3>
            </div>
            {{#if posts.length}}
                <ul class="list-group">
                  {{#each posts as |post|}}
                    <li class="list-group-item"><a href="/posts/{{post.id}}">
                    <span class="list-item-title">{{post.title}}</span></a>
                    <i id="update-blog" data-id="{{post.id}}">&#x1F4DD;</i>
                    <i id="delete-blog" class="fas fa-trash-alt float-right text-danger delete-note" data-id="{{post.id}}"></i>
                    </li>
                    {{/each}}
                </ul>                 
            {{/if}}
          </div>
        </div>
        <div class="col-md-7 col-lg-8">
          <form id="blog-form">
            <input
            id="blogTitleElement"
            class="blog-title"
            placeholder="Enter Blog Title Here"
            maxlength="50"
            type="text"
            name="title"
          />
          <div class="mb-3">
            {{!-- <label id="blogPicture" for="blogImage">Select a file:</label> --}}
            <label id="blogPicture" class="form-label" for="blogImage">Add Blog Header Image:</label>
            <input type="file" class="form-control" id="blogImage" name="image">
          </div>
          {{!-- <input type="file" id="blogImage" name="image"/> --}}
          <div id="blog-editor" name="content" class="fluid-container"></div>
          </form>
        </div>
      </div>
</div>
<script src="https://cdn.quilljs.com/1.3.7/quill.js"></script>
<script src="./js/dashboard.js"></script>
